<?xml version="1.0" encoding="UTF-8"?>
<toolbox> 
	<tool>
		<key>number</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.NumberTool</class>
		<parameter name="format" value="#0.00"></parameter>
	</tool>
	<tool>
		<key>math</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.MathTool</class>
	</tool>
	<tool>
	    <key>date</key>
	    <scope>application</scope>
	    <class>org.apache.velocity.tools.generic.ComparisonDateTool</class>
	    <parameter name="format" value="yyyy-MM-dd"/>
	    <parameter name="depth" value="2"/>
	    <parameter name="skip" value="month"/>
	</tool>
	<tool>
		<key>refreshTools</key>
		<scope>application</scope>
		<class>com.lanshan.web.filter.RefreshHolder</class>
	</tool>
	<tool>
		<key>dictTools</key>
		<scope>application</scope>
		<class>com.lanshan.web.util.DictUtil</class>
	</tool>
	<tool>
		<key>webUtil</key>
		<scope>application</scope>
		<class>com.lanshan.web.util.WebUtil</class>
	</tool>
	
</toolbox>